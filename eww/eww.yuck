(defwidget time []
  (label :class "time" :text time)
)
(defpoll time :interval "10s"
  "date '+%H:%M %b %d, %Y'")

(defwindow bar 
  :monitor 0
  :exclusive true
  :stacking "fg"
  :geometry (geometry :x "0%"
                      :y "0%"
                      :width "100%"
                      :height "20px"
                      :anchor "top center")
  ;; :reserve (struts :side "top" :distance "20px")
  (bar))
