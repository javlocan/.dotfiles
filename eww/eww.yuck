(defwidget xkb_layout []
  (button :class "xkb_layout")
)

;; ------------------------------------------------------------
;; ----------------------[ CONTROLLERS ]-----------------------
;; ------------------------------------------------------------

(defwidget controller [label value ?onclick ?onrightclick ?onmiddleclick]
; quiero tener un simbolo de volumen que haga cosas diferentes
  ; 1. que cambie el icono con el porcentaje de volumen
  ; 2. que al hacer click derecho abra un slider
  ; 3. que al hacer click izquierdo se mutee
  (button :class "controller"
          :onclick onclick
          :onrightclick onrightclick
          :onmiddleclick onmiddleclick
          :active true
          :tooltip label
    `${label}: ${value}`
  )
)

(defpoll volume :interval "1s"
  "./volume/get")

(defwidget music []
  (box :class "music"
       :orientation "h"
       :space-evenly false
       :halign "start"
    {music != "" ? "ðŸŽµ  ${music}" : ""}))

(defwidget metric [label value onchange]
  (box :orientation "h"
       :class "metric"
       :space-evenly false
    (box :class "label" label)
    (scale :min 0
           :max 101
           :active {onchange != ""}
           :value value
           :onchange onchange)))



(deflisten music :initial ""
  "playerctl --follow metadata --format '{{ artist }} - {{ title }}' || true")

