// X11 Keyboard layouts for Spanish Developers.

// Modified for a real Spanish keyboard by Jon Tombs.
// Edited for a real Dev by Javlocan.

// In KDE4, copy this inside /usr/share/X11/xkb/symbols/custom
// It will appear in keyboard layout GUI as custom
// I've tried a lot of other ways. This is pretty straigtforward.

default partial alphanumeric_keys
xkb_symbols "developer" {

    include "latin(type4)"
    name[Group1]="Spanish (Developer)";

    key <TLDE> {[       backslash, masculine, ordfeminine, degree	]};
    key <AE01> {[          exclam, 1, bar, onesuperior			]};
    key <AE02> {[          quotedbl, 2, at, twosuperior			]};
    key <AE03> {[          numbersign, 3, periodcentered, threesuperior	]};
    key <AE04> {[          dollar, 4, asciitilde, onequarter		]};
    key <AE05> {[          percent, 5, brokenbar, fiveeighths		]};
    key <AE06> {[          ampersand, 6, notsign, threequarters		]};
    key <AE07> {[          slash, 7, onehalf, seveneighths		]};
    key <AE08> {[          parenleft, 8, oneeighth, threeeighths	]};
    key <AE09> {[          parenright, 9, asciicircum			]};
    key <AE10> {[          equal, 0, grave, dead_doubleacute		]};
    key <AE11> {[ apostrophe, question, dead_macron, dead_ogonek	]};
    key <AE12> {[ exclamdown, questiondown, dead_breve, dead_abovedot	]};
    key <AD11>	{[ bracketleft, dead_grave, dead_circumflex, dead_abovering ]};
    key <AD12>	{[ bracketright,      plus,        asterisk,    dead_macron ]};
    key <AC10>	{[ dead_acute,   ntilde, Ntilde,   dead_tilde ]};
    key <AC11>	{[ braceleft, dead_acute, dead_diaeresis, dead_caron ]};
    key <BKSL>	{[ braceright,  ccedilla,   Ccedilla,     dead_breve ]};

    include "level3(ralt_switch)"
};
